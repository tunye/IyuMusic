<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_with_oper" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <com.iyuba.music.widget.imageview.CircleImageView
            android:id="@+id/vip_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="@dimen/row_space_medium"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/row_space_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vip_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/title_text" />

                <ImageView
                    android:id="@+id/vip_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/row_space_medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/vip_iyubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_space_default"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/vip_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_space_default"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/medium_text" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        android:paddingBottom="@dimen/row_space_medium"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/row_space_medium">

        <TextView
            android:id="@+id/vip_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/large_text" />
    </LinearLayout>

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_very_large"
        android:paddingTop="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/vip_month"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/big_text" />
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light" />

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_three_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_very_large"
        android:paddingTop="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/vip_three_month"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/big_text" />
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light" />

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_half_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_very_large"
        android:paddingTop="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/vip_half_year"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/big_text" />
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light" />

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_very_large"
        android:paddingTop="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/vip_year"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/big_text" />
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light" />

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_very_large"
        android:paddingTop="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/vip_app"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/big_text" />
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/vip_buy_default"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_buy_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/vip_buy_way"
            android:textColor="@color/skin_color_accent"
            android:textSize="@dimen/large_text" />
    </com.iyuba.music.widget.view.MaterialRippleLayout>
</LinearLayout>