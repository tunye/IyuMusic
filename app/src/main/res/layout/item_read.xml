<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/row_space_medium"
    app:mrl_rippleColor="@color/text_complementary"
    app:mrl_rippleDuration="600">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/read_num"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/row_space_large"
                android:background="@drawable/skin_circle_point"
                android:gravity="center"
                android:padding="@dimen/row_space_default"
                android:textColor="#ededed"
                android:textSize="@dimen/large_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_space_very_large"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/read_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/big_text" />

                <TextView
                    android:id="@+id/read_text_zh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/row_space_default"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/big_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/read_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_space_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/record_time"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/skin_app_color"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/row_space_big"
                android:textSize="@dimen/medium_text" />

            <ImageView
                android:id="@+id/read_play"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/read_play" />

            <ImageView
                android:id="@+id/read_record"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/record" />

            <ImageView
                android:id="@+id/read_record_play"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/record_play"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/read_record_send"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/record_share"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>