<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_with_oper"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.iyuba.music.widget.view.CircleImageView
            android:id="@+id/vip_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/row_space_medium"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/row_space_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/vip_photo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vip_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/title_text"/>

                <ImageView
                    android:id="@+id/vip_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/row_space_medium"/>
            </LinearLayout>

            <TextView
                android:id="@+id/vip_iyubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_space_default"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/medium_text"/>

            <TextView
                android:id="@+id/vip_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_space_default"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/medium_text"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        android:paddingBottom="@dimen/row_space_medium"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/row_space_medium">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vip_privilege"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/large_text"/>
    </LinearLayout>


    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_medium"
        android:paddingTop="@dimen/row_space_medium"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vip_symbol_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@drawable/vip_symbol"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/row_space_large"
                android:layout_toRightOf="@+id/vip_symbol_img"
                android:text="@string/vip_symbol"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/large_text"/>
        </RelativeLayout>
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light"/>

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_allapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_medium"
        android:paddingTop="@dimen/row_space_medium"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vip_allapp_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@drawable/vip_allapp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/row_space_large"
                android:layout_toRightOf="@+id/vip_allapp_img"
                android:text="@string/vip_allapp"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/big_text"/>
        </RelativeLayout>
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light"/>

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_medium"
        android:paddingTop="@dimen/row_space_medium"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vip_ad_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@drawable/vip_ad"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/row_space_large"
                android:layout_toRightOf="@+id/vip_ad_img"
                android:text="@string/vip_ad"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/big_text"/>
        </RelativeLayout>
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light"/>

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_huge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_medium"
        android:paddingTop="@dimen/row_space_medium"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vip_huge_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@drawable/vip_huge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/row_space_large"
                android:layout_toRightOf="@+id/vip_huge_img"
                android:text="@string/vip_huge"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/big_text"/>
        </RelativeLayout>
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:background="@color/background_light"/>

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_highspeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_space_medium"
        android:paddingTop="@dimen/row_space_medium"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vip_highspeed_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@drawable/vip_highspeed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/row_space_large"
                android:layout_toRightOf="@+id/vip_highspeed_img"
                android:text="@string/vip_highspeed"
                android:textColor="@color/text_complementary"
                android:textSize="@dimen/big_text"/>
        </RelativeLayout>
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_light"/>

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/vip_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <TextView
            android:id="@+id/vip_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/skin_color_accent"
            android:textSize="@dimen/large_text"/>
    </com.iyuba.music.widget.view.MaterialRippleLayout>
</LinearLayout>