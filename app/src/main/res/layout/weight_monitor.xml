<?xml version="1.0" encoding="utf-8"?>
<com.iyuba.music.widget.view.ImmersiveInsertFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_with_oper"/>

        <TextView
            android:id="@+id/weight_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/row_space_very_large"
            android:layout_marginTop="@dimen/row_space_large"
            android:textColor="@color/text_color"
            android:textSize="@dimen/large_text"/>

        <TextView
            android:id="@+id/weight_wedding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/row_space_very_large"
            android:layout_marginTop="@dimen/row_space_medium"
            android:textColor="@color/text_color"
            android:textSize="@dimen/large_text"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</com.iyuba.music.widget.view.ImmersiveInsertFrameLayout>