<?xml version="1.0" encoding="utf-8"?>
<com.iyuba.music.widget.view.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/row_space_medium"
    app:mrl_rippleColor="@color/text_complementary"
    app:mrl_rippleDuration="300">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/row_space_large"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/clear_history"
            android:layout_width="@dimen/activity_horizontal_margin_big"
            android:layout_height="@dimen/activity_horizontal_margin_big"
            android:layout_alignParentRight="true"
            app:mm_color="@color/text_color"
            app:mm_strokeWidth="2" />
    </RelativeLayout>
</com.iyuba.music.widget.view.MaterialRippleLayout>

