<?xml version="1.0" encoding="utf-8"?>
<com.buaa.ct.core.view.viewgroup.ImmersiveInsertFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/recommend_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.buaa.ct.core.view.image.CircleImageView xmlns:ri="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recommend_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@mipmap/ic_launcher2"
                ri:border_color="@color/skin_app_color"
                ri:border_width="@dimen/line_default" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/recommend_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_space_large"
                android:hint="@string/study_recommend_title_hint"
                android:imeOptions="actionNext"
                android:maxLines="1"
                app:met_baseColor="@color/text_gray_color"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/skin_app_color" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/recommend_singer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_space_default"
                android:hint="@string/study_recommend_singer_hint"
                android:imeOptions="actionSend"
                android:maxLines="1"
                app:met_baseColor="@color/text_gray_color"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/skin_app_color" />
        </LinearLayout>
    </LinearLayout>
</com.buaa.ct.core.view.viewgroup.ImmersiveInsertFrameLayout>