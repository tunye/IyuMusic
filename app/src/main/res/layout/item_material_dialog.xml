<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:id="@+id/sleep_ripple"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="@dimen/row_space_medium"
                                                app:mrl_rippleColor="#656565"
                                                app:mrl_rippleDuration="600">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sleep_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/row_space_large"
            android:textColor="#343434"/>

        <RadioButton
            android:id="@+id/sleep_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/row_space_medium"/>
    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>
