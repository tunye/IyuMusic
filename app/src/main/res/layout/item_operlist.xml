<?xml version="1.0" encoding="utf-8"?>
<com.iyuba.music.widget.view.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/row_space_large"
    app:mrl_rippleColor="@color/text_complementary"
    app:mrl_rippleDuration="300">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/oper_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/row_space_large" />

        <TextView
            android:id="@+id/oper_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:maxLines="2"
            android:ellipsize="none"
            android:layout_toEndOf="@+id/oper_icon"
            android:textColor="@color/text_color"
            android:textSize="@dimen/large_text" />

        <TextView
            android:id="@+id/oper_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/row_space_medium"
            android:textColor="@color/text_color"
            android:textSize="@dimen/big_text"
            android:visibility="gone" />

        <com.iyuba.music.widget.imageview.GoImageView
            android:id="@+id/oper_go"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/row_space_medium"
            app:go_color="@color/background_complementary"
            app:go_direction="LEFT"
            app:go_stroke="@dimen/line_default" />
    </RelativeLayout>
</com.iyuba.music.widget.view.MaterialRippleLayout>
