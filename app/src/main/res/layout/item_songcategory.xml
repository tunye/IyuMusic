<?xml version="1.0" encoding="utf-8"?>
<com.buaa.ct.core.view.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/row_space_medium"
    app:mrl_rippleColor="@color/text_complementary"
    app:mrl_rippleDuration="300">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/songlist_image"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/row_space_big" />

        <TextView
            android:id="@+id/songlist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/row_space_very_large"
            android:layout_marginEnd="@dimen/row_space_big"
            android:layout_toStartOf="@+id/songlist_count"
            android:layout_toEndOf="@+id/songlist_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/big_text" />

        <TextView
            android:id="@+id/songlist_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/row_space_big"
            android:textColor="@color/text_complementary"
            android:textSize="@dimen/medium_text" />
    </RelativeLayout>
</com.buaa.ct.core.view.MaterialRippleLayout>