<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/row_space_large"
    android:gravity="bottom"
    android:orientation="vertical">

    <com.iyuba.music.widget.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="100"
        app:rv_backgroundColor="#cdffffff"
        app:rv_cornerRadius="@dimen/corner_radius_default">

        <ListView
            android:id="@+id/operList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#ababab"
            android:dividerHeight="@dimen/line_thin" />

    </com.iyuba.music.widget.roundview.RoundLinearLayout>


    <com.iyuba.music.widget.roundview.RoundTextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_space_large"
        android:gravity="center"
        android:padding="@dimen/row_space_big"
        android:text="@string/app_cancel"
        android:textColor="@color/skin_app_color"
        android:textSize="@dimen/large_text"
        app:rv_backgroundColor="#cdffffff"
        app:rv_cornerRadius="@dimen/corner_radius_default" />
</LinearLayout>