<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/row_space_medium">

    <FrameLayout
        android:id="@+id/chatting_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/row_space_default"
        android:background="#55888888"
        android:paddingStart="@dimen/row_space_medium"
        android:paddingTop="@dimen/row_space_small"
        android:paddingEnd="@dimen/row_space_medium"
        android:paddingBottom="@dimen/row_space_small">

        <TextView
            android:id="@+id/chatting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_on_appcolor"
            android:textSize="@dimen/medium_text" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/chatting_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/chatto_bg"
            android:maxWidth="225dp"
            android:paddingStart="@dimen/row_space_big"
            android:paddingTop="@dimen/row_space_default"
            android:paddingEnd="@dimen/row_space_very_large"
            android:paddingBottom="@dimen/row_space_big"
            android:textSize="@dimen/big_text" />

        <com.buaa.ct.core.view.image.CircleImageView
            android:id="@+id/chatting_photo"
            android:layout_width="50dp"
            android:layout_height="50dip"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/row_space_medium" />
    </LinearLayout>

</LinearLayout>