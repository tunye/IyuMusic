<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <com.iyuba.music.widget.view.MaterialRippleLayout
        android:id="@+id/discover_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/row_space_very_large"
        app:mrl_rippleColor="@color/text_complementary"
        app:mrl_rippleDuration="300">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/discover_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/row_space_large" />

            <TextView
                android:id="@+id/discover_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/activity_horizontal_margin_big"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_text" />

            <com.iyuba.music.widget.imageview.GoImageView
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/row_space_medium"
                app:go_color="@color/background_complementary"
                app:go_direction="LEFT"
                app:go_stroke="@dimen/line_default" />
        </LinearLayout>
    </com.iyuba.music.widget.view.MaterialRippleLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thin"
        android:layout_gravity="bottom"
        android:background="@color/background_light" />
</FrameLayout>