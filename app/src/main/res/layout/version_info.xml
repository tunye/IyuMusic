<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/background"
              android:orientation="vertical"
              android:paddingBottom="@dimen/row_space_large"
              android:paddingStart="@dimen/activity_horizontal_margin_big"
              android:paddingEnd="@dimen/activity_horizontal_margin_big"
              android:paddingTop="@dimen/activity_horizontal_margin_big">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="版本详情"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/skin_app_color"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="版本号"
        android:textColor="@color/text_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/version_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="序列号"
        android:textColor="@color/text_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/version_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="发布时间"
        android:textColor="@color/text_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/version_build_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="负责人"
        android:textColor="@color/text_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/version_builder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="编译类型"
        android:textColor="@color/text_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/version_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    <com.iyuba.music.widget.view.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    android:id="@+id/version_know"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="right"
                                                    android:layout_marginTop="15dp"
                                                    app:mrl_rippleColor="@color/text_complementary"
                                                    app:mrl_rippleDuration="300">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@string/app_accept"
            android:textColor="@color/skin_app_color"
            android:textSize="18sp"/>
    </com.iyuba.music.widget.view.MaterialRippleLayout>
</LinearLayout>